<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/txt_many"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="주문많음"
        android:background="@drawable/blue_radius_white_background"
        android:padding="5dp"
        android:textStyle="bold"
        android:textColor="@color/CoupangBlue"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/txt_good"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="리뷰최고"
        android:background="@drawable/blue_radius_white_background"
        android:padding="5dp"
        android:textStyle="bold"
        android:textColor="@color/CoupangBlue"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/txt_many"
        android:layout_marginStart="5dp"/>

    <TextView
        android:id="@+id/txt_menu_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="부대찌개"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/txt_good"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/txt_menu_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12,000원"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/txt_menu_name"
        app:layout_constraintStart_toStartOf="parent"/>


    <TextView
        android:id="@+id/txt_menu_detail"
        android:layout_width="300sp"
        android:layout_height="wrap_content"
        android:text="밥, 계란후라이, 스팸(인분수대로 제공)+라면사리 1개dddd"
        android:textSize="15dp"
        android:ellipsize="end"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/txt_menu_price"
        app:layout_constraintStart_toStartOf="@id/txt_menu_price"
        app:layout_constraintEnd_toStartOf="@id/img_plate"/>

    <ImageView
        android:id="@+id/img_plate"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/img_2_side1"/>

</androidx.constraintlayout.widget.ConstraintLayout>