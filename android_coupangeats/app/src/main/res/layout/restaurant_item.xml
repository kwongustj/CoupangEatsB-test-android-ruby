<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_1_big"
        android:layout_width="0dp"
        android:layout_height="182dp"
        android:src="@drawable/img_1_big"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/img_2_side_1"
        app:layout_constraintHorizontal_weight="3"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="2dp"
        android:layout_marginTop="25dp"
        app:layout_constraintHorizontal_chainStyle="packed"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_2_side_1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/img_1_big"
        app:layout_constraintBottom_toTopOf="@id/img_2_side_2"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@id/img_1_big"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_weight="1"
        android:src="@drawable/img_2_side1"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_2_side_2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/img_2_side_1"
        app:layout_constraintBottom_toBottomOf="@id/img_1_big"
        app:layout_constraintStart_toStartOf="@id/img_2_side_1"
        app:layout_constraintEnd_toEndOf="@id/img_2_side_1"
        android:src="@drawable/img_2_side1"
        app:layout_constraintVertical_weight="1"
        android:layout_marginTop="5dp"/>

    <TextView
        android:id="@+id/txt_name_restaurant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="자연을 담은 돈까스 본사직인점"
        app:layout_constraintTop_toBottomOf="@id/img_1_big"
        app:layout_constraintStart_toStartOf="parent"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:layout_marginTop="15dp"
        android:maxLines="1"
        android:layout_marginStart="4dp"
        android:ellipsize="end"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/chita"
        android:layout_width="75dp"
        android:layout_height="25dp"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toBottomOf="@id/img_1_big"
        app:layout_constraintStart_toEndOf="@id/txt_name_restaurant"
        android:src="@drawable/chita"
        android:layout_marginTop="15dp"/>

    <TextView
        android:id="@+id/txt_min"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="14-24 분"
        app:layout_constraintTop_toTopOf="@id/txt_name_restaurant"
        app:layout_constraintEnd_toEndOf="@id/img_2_side_1"
        app:layout_constraintBottom_toBottomOf="@id/txt_name_restaurant"
        android:textSize="16dp"
        android:textColor="@color/black"
        android:layout_marginEnd="2dp"
        android:maxLines="1"
        android:ellipsize="end" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_star"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintTop_toBottomOf="@id/txt_name_restaurant"
        app:layout_constraintStart_toStartOf="@id/txt_name_restaurant"
        android:src="@drawable/star"
        android:layout_marginTop="5dp"/>

    <TextView
        android:id="@+id/txt_star"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4.6"
        app:layout_constraintTop_toTopOf="@id/img_star"
        app:layout_constraintStart_toEndOf="@id/img_star"
        android:textSize="16dp"
        android:textColor="@color/black"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginStart="5dp"/>

    <TextView
        android:id="@+id/txt_review_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(700)"
        app:layout_constraintTop_toTopOf="@id/img_star"
        app:layout_constraintStart_toEndOf="@id/txt_star"
        android:textSize="16dp"
        android:textColor="@color/black"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginStart="3dp"
        />

    <TextView
        android:id="@+id/txt_point_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" · "
        app:layout_constraintTop_toTopOf="@id/img_star"
        app:layout_constraintStart_toEndOf="@id/txt_review_num"
        android:textSize="16dp"
        android:textColor="@color/black"
        android:maxLines="1"
        android:ellipsize="end"
        />

    <TextView
        android:id="@+id/txt_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0.5km"
        app:layout_constraintTop_toTopOf="@id/img_star"
        app:layout_constraintStart_toEndOf="@id/txt_point_1"
        android:textSize="16dp"
        android:textColor="@color/black"
        android:maxLines="1"
        android:ellipsize="end"
        />

    <TextView
        android:id="@+id/txt_point_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" · "
        app:layout_constraintTop_toTopOf="@id/img_star"
        app:layout_constraintStart_toEndOf="@id/txt_distance"
        android:textSize="16dp"
        android:textColor="@color/black"
        android:maxLines="1"
        android:ellipsize="end"

        />

    <TextView
        android:id="@+id/txt_deliverty_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="무료배달"
        app:layout_constraintTop_toTopOf="@id/img_star"
        app:layout_constraintStart_toEndOf="@id/txt_point_2"
        android:textSize="16dp"
        android:textColor="@color/black"
        android:maxLines="1"
        android:ellipsize="end"
        android:paddingBottom="15dp"
        />



</androidx.constraintlayout.widget.ConstraintLayout>