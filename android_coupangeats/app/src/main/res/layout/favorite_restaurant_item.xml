<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginTop="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_1_big"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/img_2_side1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="15dp"/>

    <TextView
        android:id="@+id/txt_name_restaurant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="자연을 담은"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/img_1_big"
        android:textStyle="bold"
        android:textSize="17dp"
        android:textColor="@color/black"
        android:maxLines="1"
        android:layout_marginStart="10dp"
        android:ellipsize="end" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/chita"
        android:layout_width="65dp"
        android:layout_height="20dp"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="@id/txt_name_restaurant"
        app:layout_constraintBottom_toBottomOf="@id/txt_name_restaurant"
        app:layout_constraintStart_toEndOf="@id/txt_name_restaurant"
        android:src="@drawable/chita" />

    <TextView
        android:id="@+id/txt_min"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="14-24 분"
        app:layout_constraintTop_toTopOf="@id/txt_distance"
        app:layout_constraintStart_toEndOf="@id/txt_point_1"
        android:textSize="14dp"
        android:textColor="@color/black"
        android:layout_marginEnd="2dp"
        android:maxLines="1"
        android:ellipsize="end" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_star"
        android:layout_width="15dp"
        android:layout_height="15dp"
        app:layout_constraintTop_toBottomOf="@id/txt_name_restaurant"
        app:layout_constraintStart_toStartOf="@id/txt_name_restaurant"
        android:src="@drawable/star"
        android:layout_marginTop="5dp"/>

    <TextView
        android:id="@+id/txt_star"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4.6"
        app:layout_constraintTop_toTopOf="@id/img_star"
        app:layout_constraintStart_toEndOf="@id/img_star"
        android:textSize="14dp"
        android:textColor="@color/black"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginStart="5dp"/>

    <TextView
        android:id="@+id/txt_review_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(700)"
        app:layout_constraintTop_toTopOf="@id/img_star"
        app:layout_constraintStart_toEndOf="@id/txt_star"
        android:textSize="14dp"
        android:textColor="@color/black"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginStart="3dp"
        />

    <TextView
        android:id="@+id/txt_point_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" · "
        app:layout_constraintTop_toTopOf="@id/txt_distance"
        app:layout_constraintStart_toEndOf="@id/txt_distance"
        android:textSize="16dp"
        android:textColor="@color/black"
        android:maxLines="1"
        android:ellipsize="end"
        />

    <TextView
        android:id="@+id/txt_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0.5km"
        app:layout_constraintTop_toBottomOf="@id/img_star"
        app:layout_constraintStart_toStartOf="@id/txt_name_restaurant"
        android:textSize="14dp"
        android:textColor="@color/black"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginTop="5dp"
        />

    <TextView
        android:id="@+id/txt_point_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" · "
        app:layout_constraintTop_toTopOf="@id/txt_distance"
        app:layout_constraintStart_toEndOf="@id/txt_min"
        android:textSize="16dp"
        android:textColor="@color/black"
        android:maxLines="1"
        android:ellipsize="end"

        />

    <TextView
        android:id="@+id/txt_deliverty_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="무료배달"
        app:layout_constraintTop_toTopOf="@id/txt_distance"
        app:layout_constraintStart_toEndOf="@id/txt_point_2"
        android:textSize="14dp"
        android:textColor="@color/black"
        android:maxLines="1"
        android:ellipsize="end"
        />

    <TextView
        android:id="@+id/txt_out"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="포장 가능"
        app:layout_constraintTop_toBottomOf="@id/txt_point_2"
        app:layout_constraintStart_toStartOf="@id/txt_name_restaurant"
        android:textSize="13dp"
        android:textColor="@color/white"
        android:maxLines="1"
        android:ellipsize="end"
        android:background="@drawable/out_text_background"
        android:paddingStart="8dp"
        android:paddingEnd="10dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:textStyle="bold"
        android:visibility="visible"
        android:layout_marginTop="8dp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ECECEC"
        app:layout_constraintTop_toBottomOf="@id/img_1_big"
        android:layout_marginTop="15dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>